a:hover
  color inherit
  text-decoration: none

.pos_rel
  position: relative

.padding-left
  padding-left 0
.padding-right
  padding-right 0

.search_select-button
  width 100%
  min-height 49px
  border bgrey
  color tgrey
  text-transform uppercase
  text-align left
  position relative
  font 11px fsl
  letter-spacing 1pt
  padding 15px
  padding-right: 30px
  background-color transparent
  cursor pointer
  margin-top 20px

.search_select-button:after
  margin 0
  position absolute
  right 20px
  top 47%
  text-align left

.search_select-list
  width 100%
  border bgrey
  color tgrey
  text-transform uppercase
  text-align left
  font 11px fsl
  letter-spacing 1pt
  background-color white
  top 66px
  max-height 285px
  overflow-y scroll
  border-top-color sred
  li
    padding 15px
    transition tr
  li:hover
    color sred
    cursor pointer
  label:before
    top 0
  .search__label
    margin-bottom 15px

.search_confirm-request
  width 280px
  height 49px
  font 12px fsl
  color white
  background-color sred
  border none
  cursor pointer
  margin 0 auto
  text-transform uppercase
  letter-spacing 1pt
  display block

.search_services
  text-align left
  z-index 9

.search_services__fix
  width 350px

.search_select-sorting
  min-width 160px
  min-height 33px
  height 33px
  padding 0
  padding-left 8px
  padding-right 35px

.search_sort-list
  min-width 160px
  background-color white
  top 50px
  li
    padding 9px

.search_col
  max-width 300px

.search form.search-form_hide
  display none

.red_text_hover
  transition tr

.red_text_hover:hover
  color sred
  transition tr

.red_text_hover:hover:before
  border-color sred
  transition tr

.red_text_hover:checked + label
  color sred

.red_text_hover:checked + label:before
  border-color sred
  background-image url("../img/icons/active-arrow-red.png")
  transition-property border-color, color

.site-btn:hover
  background-color sredh
  transition tr
  color white

.soc_hover
  transition tr
  opacity .5

.soc_hover:hover
  transition tr
  opacity 1

.red_bord_hover_reply-form:focus
  border-color sred
  transition tr
  outline none

.open .red_bord_hover
  border-color sred
  color sred
  transition tr

.red_link_hover
  transition tr

.red_link_hover:hover
  transition tr
  color sredh

.footer a:hover
  color #9b9b9b
  transition tr

.mt
  margin-top: 15px

.fl_row_center
  display: flex
  flex-direction: row
  align-items: center

.fl_col_center
  display: flex
  flex-direction: column
  justify-content: center
